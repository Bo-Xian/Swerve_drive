<?xml version="1.0"?>
<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find swerve_drive_description)/config/ros_controllers.yaml" command="load"/>

  <!-- start this controller -->
  <node name="controller_spawner" pkg="controller_manager" type="controller_manager" respawn="false" output="screen"
    args="spawn joint_state_controller
                lf_swerve_joint_controller
                rf_swerve_joint_controller
                rr_swerve_joint_controller
                lr_swerve_joint_controller
                lf_wheel_joint_controller
                rf_wheel_joint_controller
                rr_wheel_joint_controller
                lr_wheel_joint_controller"/>

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
</launch>
